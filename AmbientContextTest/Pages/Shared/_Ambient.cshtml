@model AmbientContext?

@if (Model is not null && (Model.Pid.HasValue || Model.Hid.HasValue))
{
    <div class="sticky-top bg-success py-3 h3 fw-bold text-white text-center">
        AMBIENT CONTEXT - H: @(Model.Hid?.ToString() ?? "N/A") P: @(Model.Pid?.ToString() ?? "N/A")
    </div>
}
else
{
    <div class="sticky-top bg-warning py-3 h3 fw-bold text-dark text-center bg-gradient">
        NO AMBIENT CONTEXT
    </div>
}